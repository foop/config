## for all terminals 

*font: xft:Ubuntu Mono:pixelsize=14:

## URXVT

URxvt*scrollBar: false
URxvt*background: white
URxvt*foreground: black
URxvt.perl-ext-common: default,matcher,clipboard
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt*saveLines: 1000

# Make Keypad work:
URxvt.keysym.KP_Add:    +
URxvt.keysym.KP_Substract:  -
URxvt.keysym.KP_Multiply:   *
URxvt.keysym.KP_Divide: /
URxvt.keysym.KP_Decimal:   .
URxvt.keysym.KP_Seperator: ,
URxvt.keysym.KP_1:  1
URxvt.keysym.KP_2:  2
URxvt.keysym.KP_3:  3
URxvt.keysym.KP_4:  4
URxvt.keysym.KP_5:  5
URxvt.keysym.KP_6:  6
URxvt.keysym.KP_7:  7
URxvt.keysym.KP_8:  8
URxvt.keysym.KP_9:  9
URxvt.keysym.KP_0:  0
